{
  "name": "ssh-remote-app",
  "version": "1.0.0",
  "description": "SSH远程连接应用，支持文件管理、终端和AI助手",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "debug": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron . --dev --remote-debugging-port=9222\"",
    "build": "vite build",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build-electron"
  },
  "keywords": [
    "electron",
    "ssh",
    "remote",
    "terminal",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^7.1.9",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "ansi-to-html": "^0.7.2",
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "mitt": "^3.0.1",
    "pinia": "^3.0.3",
    "sass": "^1.93.2",
    "ssh2": "^1.14.0",
    "ssh2-sftp-client": "^9.0.0",
    "vue": "^3.2.36"
  },
  "build": {
    "appId": "com.example.ssh-remote-app",
    "productName": "SSH Remote App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "preload.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
