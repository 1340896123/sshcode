{
  "name": "ssh-remote-app",
  "version": "1.0.0",
  "description": "SSH远程连接应用，支持文件管理、终端和AI助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "keywords": ["electron", "ssh", "remote", "terminal", "ai"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "ssh2": "^1.14.0",
    "ssh2-sftp-client": "^9.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "js-yaml": "^4.1.0",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.example.ssh-remote-app",
    "productName": "SSH Remote App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}