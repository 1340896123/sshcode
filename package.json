{
  "name": "ssh-remote-app",
  "version": "1.0.0",
  "description": "SSH远程连接应用，支持文件管理、终端和AI助手",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "vite",
    "debug": "electron . --dev --remote-debugging-port=9222",
    "debug-main": "electron . --dev",
    "build": "vite build",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build-electron"
  },
  "keywords": [
    "electron",
    "ssh",
    "remote",
    "terminal",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@tailwindcss/vite": "^4.1.14",
    "axios": "^1.6.0",
    "babel-loader": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "express": "^5.1.0",
    "html-webpack-plugin": "^5.6.4",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.545.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ssh2": "^1.14.0",
    "ssh2-sftp-client": "^9.0.0",
    "tailwindcss": "^4.1.14",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.example.ssh-remote-app",
    "productName": "SSH Remote App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
