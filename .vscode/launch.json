{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试主进程",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--dev",
        "--remote-debugging-port=9222"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "port": 9229
    },
    {
      "name": "调试渲染进程",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    },
    {
      "name": "同时调试主进程和渲染进程",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--dev",
        "--remote-debugging-port=9222",
        "--inspect=9229"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "port": 9229
    },
    {
      "name": "调试主进程（断点暂停）",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        ".",
        "--dev",
        "--remote-debugging-port=9222",
        "--inspect-brk=9229"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "port": 9229
    }
  ],
  "compounds": [
    {
      "name": "完整调试会话",
      "configurations": [
        "调试主进程（断点暂停）",
        "调试渲染进程"
      ],
      "stopAll": true
    }
  ]
}
